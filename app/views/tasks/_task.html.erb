<h3 class="display-4 text-primary"><%= current_user.name %>さんのタスク一覧</h3>

<table class="table table-sm table-hover">
    <thead class="thead-inverse">
        <tr>
            <th>#</th>
            <th>タスク</th>
            <th>ステータス</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @tasks.each do |task| %>
            <tr>
                <% if current_user == task.user %>
                    <th scope="row"><%= link_to task.id, task %></th>
                    <td><%= task.content %></td>
                    <td><%= task.status %></td>
                    <td><%= link_to '変更', edit_task_path(task), class: 'btn btn-primary btn-xs' %></td>
                    <td><%= link_to '削除', task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger btn-xs' %></td>
                <% else %>
                    <th scope="row"><%= link_to task.id, task %></th>
                    <td><%= task.content %></td>
                    <td><%= task.status %></td>
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>
<div>
<%= paginate @tasks %>
</div>